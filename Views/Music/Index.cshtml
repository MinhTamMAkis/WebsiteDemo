<div class="justify-content-center home">
    <h1 class="display-4">Music</h1>
    <div class="view-home">
        <div class="swiper   ">
            <!-- Additional required wrapper -->
            <div class="swiper-wrapper ">
                <!-- Slides -->
                @foreach (var imgas in Model)
                {
                    
                        <div class="swiper-slide d-flex align-items-center justify-content-center">
                            <img src="~/Imgae_Musics/@imgas.Image" alt="@imgas.Name">
                        </div>
                    
                }
            </div>
            <!-- If we need scrollbar -->
            <div class="swiper-scrollbar"></div>
        </div>
        <div class="swiper-button-prev"></div>
        <div class="swiper-button-next"></div>
    </div>

    <!-- PLAY MUSIC -->
    <div class="body-music d-flex align-items-center text-white ">
        <div class="music d-flex ">
            <!-- IMG MUSIC -->
            <div class="music-thumb">
               
                    <img src = "css/imgas/" alt = "" >
                
            </div>
            <!-- TITLE MUSIC -->
            <div class="music-title">
                <div class="music-name">mumei</div>
                <div class="music-singer">Nanashi Mumei</div>
            </div>

            <!-- CONTROL -->
            <audio src="music/" id="song"></audio>
            <div class="controls d-flex align-items-center">
                <ion-icon name="infinite-outline" class="play-infi"></ion-icon>
                <ion-icon name="play-back-outline" class="play-back"></ion-icon>
                <div class="play">
                    <div class="player-inner">
                        <ion-icon name="play-outline" class="play-icon"></ion-icon>
                    </div>
                </div>
                <ion-icon name="play-forward-outline" class="play-next"></ion-icon>
                <ion-icon name="repeat-outline" class="play-repeat"></ion-icon>
            </div>
            <!-- TIMER -->
            <div class="timer d-flex align-items-center">
                <div class="duration">00:00</div>
                <input type="range" name="range" id="range" class="range" min="0" max="60" value="0">
                <div class="remaining">00:00</div>
            </div>
        </div>
    </div>
</div>
