@model MusicModel
@{
    ViewData["Title"] = "Edit Music";
}
<div class="d-flex gap-1 align-items-center">
    <h3>Add Music</h3>
</div>
<div class="col-md-9 home " style="position: absolute;top: 50%;width:50%;left: 50%;transform: translate(-50%, -50%);">
    <form asp-action="Edit" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <div class="d-flex gap-1">
                <label class="text-light">Name</label>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <input asp-for="Name" class="form-control" />
        </div>
        <div class="form-group">
            <div class="d-flex gap-1">
                <label class="text-light">Singer</label>
                <span asp-validation-for="IdolId" class="text-danger" />
            </div>
            <select asp-for="IdolId" class="form-control" asp-items="ViewBag.Idols">
                <option>--Choose Singer --</option>
            </select>
        </div>
        <div class="form-group">
            <div class="d-flex gap-1">
                <label class="text-light">Image</label>
                <span asp-validation-for="ImageUpload" class="text-danger" />
            </div>
            <input asp-for="ImageUpload" class="form-control" />
             <div class="d-flex pt-1">
                <img src="~/Imgae_Musics/@Model.Image" alt="@Model.Name" style="width:50px;height:50px" />
             </div>
        </div>
        <div class="form-group">
            <div class="d-flex gap-1">
                <label class="text-light">File Mp3</label>
                <span asp-validation-for="Mp3Upload" class="text-danger" />
            </div>
            <input asp-for="Mp3Upload" class="form-control" />
        </div>
        <div class="form-group">
            <button class="btn btn-primary">Update</button>
        </div>
    </form>
    <a asp-action="Index" asp-controller="Musics">Go Back</a>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
